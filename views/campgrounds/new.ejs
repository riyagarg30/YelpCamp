<%- include ("../partials/header") %>
<div class="container">
    <div class="row">
        <div class="text-center">
            <h1>Create a new Campground</h1>
        </div>
        
        
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                
                <div class="form-group">
                    <input class="form-control" type="text" name="campName" placeholder="Camp Name">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>

                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="Enter price for per night stay in USD" min="0.1" step="0.1">
                </div>

                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Enter image description" rows="15"></textarea>
                    
                </div>
                                
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </form>
        </div>
        <div class="text-center">
            <a class="text-center" href="/campgrounds">Go back</a>
        </div>
        
        
    </div>   
</div>

<%- include ("../partials/footer") %>  
