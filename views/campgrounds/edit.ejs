<%- include ("../partials/header") %>
<div class="container">
    <div class="row">
        <div class="text-center">
            <h1>Edit Campground <%= campground.name %></h1>
        </div>
        
        
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="Camp Name" value="<%= campground.name %>">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" placeholder="image url" value="<%= campground.image %>">
                </div>

                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" placeholder="Enter price for per night stay in USD" min="0.1" step="0.1" value="<%= campground.price %>">
                </div>

                <div class="form-group">
                    <textarea name="campground[description]" class="form-control" placeholder="Enter image description" rows="15"><%= campground.description %></textarea>
                    
                </div>
                                
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </form>
        </div>
        <div class="text-center">
            <a class="text-center" href="/campgrounds">Go back</a>
        </div>
        
        
    </div>   
</div>

<%- include ("../partials/footer") %>  
